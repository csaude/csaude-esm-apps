{
  "name": "@csaude/esm-consultation-workflow",
  "version": "4.0.0",
  "license": "MPL-2.0",
  "description": "Consultation workflow app",
  "browser": "dist/openmrs-esm-consultation-workflow.js",
  "main": "src/index.ts",
  "source": true,
  "scripts": {
    "start": "openmrs develop",
    "serve": "webpack serve --mode=development",
    "build": "webpack --mode production",
    "analyze": "webpack --mode=production --env analyze=true",
    "lint": "eslint src --ext js,jsx,ts,tsx --max-warnings 0",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\" --list-different",
    "typescript": "tsc",
    "test": "jest --config jest.config.js --passWithNoTests",
    "verify": "turbo lint typescript coverage",
    "coverage": "yarn test --coverage",
    "prepare": "husky install",
    "extract-translations": "i18next 'src/**/*.component.tsx' --config ../../tools/i18next-parser.config.js",
    "test-e2e": "playwright test"
  },
  "browserslist": [
    "extends browserslist-config-openmrs"
  ],
  "keywords": [
    "openmrs",
    "microfrontends"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csaude/csaude-esm-apps.git"
  },
  "homepage": "https://github.com/csaude/csaude-esm-apps#readme",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/csaude/csaude-esm-apps/issues"
  },
  "dependencies": {
    "@carbon/react": "^1.68.0",
    "lodash-es": "^4.17.21",
    "react-hook-form": "^7.54.2",
    "react-use-wizard": "^2.3.0"
  },
  "peerDependencies": {
    "@openmrs/esm-framework": "6.x",
    "@openmrs/esm-patient-common-lib": "9.x",
    "dayjs": "1.x",
    "react": "18.x",
    "react-i18next": "11.x",
    "react-router-dom": "6.x",
    "rxjs": "6.x"
  },
  "devDependencies": {
    "@openmrs/esm-patient-common-lib": "9.x",
    "webpack": "^5.94.0"
  }
}
