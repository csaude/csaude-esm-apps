{
  "name": "@csaude/esm-ficha-resumo",
  "version": "3.0.0",
  "license": "MPL-2.0",
  "description": "An OpenMRS seed application for building microfrontends",
  "browser": "dist/openmrs-esm-template-app.js",
  "main": "src/index.ts",
  "source": true,
  "scripts": {
    "start": "openmrs develop",
    "serve": "webpack serve --mode=development",
    "build": "webpack --mode production",
    "analyze": "webpack --mode=production --env analyze=true",
    "lint": "TIMING=1 eslint src --ext js,jsx,ts,tsx",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\" --list-different",
    "typescript": "tsc",
    "test": "jest --config jest.config.js --passWithNoTests",
    "verify": "turbo lint typescript coverage",
    "coverage": "yarn test --coverage",
    "prepare": "husky install",
    "extract-translations": "i18next 'src/**/*.component.tsx' --config ./i18next-parser.config.js",
    "test-e2e": "playwright test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn verify"
    }
  },
  "browserslist": [
    "extends browserslist-config-openmrs"
  ],
  "keywords": [
    "openmrs",
    "microfrontends"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csaude/csaude-esm-apps.git"
  },
  "homepage": "https://github.com/csaude/csaude-esm-apps#readme",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/csaude/csaude-esm-apps/issues"
  },
  "dependencies": {
    "@carbon/react": "^1.55.0",
    "@hookform/resolvers": "^3.3.4",
    "lodash-es": "^4.17.21",
    "react-hook-form": "^7.51.3",
    "react-image-annotate": "^1.8.0",
    "zod": "^3.23.4"
  },
  "peerDependencies": {
    "@openmrs/esm-framework": "*",
    "dayjs": "1.x",
    "react": "18.x",
    "react-i18next": "11.x",
    "react-router-dom": "6.x",
    "rxjs": "6.x"
  },
  "devDependencies": {
    "@openmrs/esm-patient-common-lib": "next",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "pretty-quick": "^3.1.3"
  },
  "packageManager": "yarn@4.2.2"
}
